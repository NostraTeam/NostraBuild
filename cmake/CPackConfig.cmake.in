set(CPACK_PACKAGE_NAME               "${PROJECT_NAME}")
set(CPACK_PACKAGE_VENDOR             "The Nostra Project Team")
set(CPACK_PACKAGE_VERSION_MAJOR      "${PROJECT_VERSION_MAJOR}")
set(CPACK_PACKAGE_VERSION_MINOR      "${PROJECT_VERSION_MINOR}")
set(CPACK_PACKAGE_VERSION_PATCH      "${PROJECT_VERSION_PATCH}")
set(CPACK_PACKAGE_VERSION            "${PROJECT_VERSION}")
set(CPACK_PACKAGE_DESCRIPTION        "${PROJECT_DESCRIPTION}")
set(CPACK_RESOURCE_FILE_WELCOME      "${CMAKE_CURRENT_SOURCE_DIR}/cmake/welcome.txt")
set(CPACK_PACKAGE_CONTACT            "Lukas Reichmann")

# Set LICENSE file this way because of WIX. WIX expects .rft files, but is capable of converting .txt to 
# .rtf (as long as the extension actually is .txt, which this does).
configure_file("${CMAKE_CURRENT_SOURCE_DIR}/LICENSE" "${CMAKE_CURRENT_BINARY_DIR}/LICENSE.txt" COPYONLY)
set(CPACK_RESOURCE_FILE_LICENSE      "${CMAKE_CURRENT_BINARY_DIR}/LICENSE.txt")

if(UNIX AND NOT APPLE)
    set(CPACK_GENERATOR                  "7Z;ZIP;STGZ;DEB;RPM")
elseif(WIN32)
    set(CPACK_GENERATOR                  "7Z;ZIP;WIX")
elseif(APPLE)
   set(CPACK_GENERATOR                   "7Z;ZIP") #TODO
else()
    message(SEND_ERROR "The current operating system may not support CPack.")
endif()
